---
// Component Imports
import DocumentHead from '../components/DocumentHead.astro';
import Layout from '../components/Layout.astro';
import NotesByTag from '../components/NotesByTag.astro';

let title = `Tags | Rach Smith's digital garden`;
let description = `Hi 👋🏼 I'm Rach. A developer building software for CodePen, wife, mother of two,
  productivity nerd and recovering screen addict. This is my digital garden.`;
let permalink = 'https://rachsmith.com/tags';

let page = 'tags';
---

<html lang="en">
  <DocumentHead title={title} description={description} permalink={permalink} />
  <body>
    <Layout page={page}>
      <NotesByTag />
    </Layout>
  </body>
</html>
