---
  const {id} = Astro.props;
---

<style>
  h3 {
    font-size: 1.5rem;
    font-family: 'Chivo', sans-serif;
    letter-spacing: 2px;
    -webkit-text-stroke: 1px black;
    color: white;
    text-shadow: 1px -2px 0 #000425, -1px -1px 0 #000425, 1px -1px 0 #000425,
      -1px 1px 0 #000425, 1px 1px 0 #000425;
    text-transform: uppercase;
    font-weight: 900;
    margin-bottom: 0.2em;
  }
</style>

<h3 id={id}>
  <slot />
</h3>