---
type Props = {
  page: string;
};

const { page } = Astro.props;
---

<style>
  .sidebar {
    position: fixed;
    width: 20vw;
    padding: 4em 1em 3em 2em;
    text-align: right;
    box-sizing: border-box;
  }

  .nav ul {
    list-style: none;
    display: grid;
    align-items: right;
    margin: 0;
    padding: 0;
  }

  .nav li {
    text-transform: uppercase;
    margin-bottom: 0.4em;
  }

  .nav li a {
    text-decoration: none;
    font-size: 1.1em;
    position: relative;
    display: block;
    transition: padding-right 0.3s ease-in-out;
  }

  .nav li a:hover {
    padding-right: 12px;
  }

  .nav li a::after {
    content: '';
    display: block;
    width: 4px;
    height: 0;
    background: #000;
    transition: width 0.3s;
    position: absolute;
    right: 0;
    top: 15px;
    border-radius: 2px;
    transition: height 0.2s ease-out, top 0.2s ease-out;
  }

  .nav li a:hover::after {
    height: 17px;
    top: 8px;
    transition: height 0.3s ease-in, top 0.3s ease-in;
  }

  .lorikeet {
    width: 120%;
  }

  h1 {
    font-size: 2vw;
    margin: 0;
    margin-bottom: 1em;
    line-height: 1.1;
    text-align: right;
  }
</style>

<div class="sidebar">
  <img class="lorikeet" src="/images/lori.png" alt="Rach Smith" />
  <h1>Rach Smith's digital garden</h1>
  <nav class="nav">
    <ul>
      <li><a class:list={{ active: page === 'notes' }} href="/">Notes</a></li>
      <li><a href="/tags">Tags</a></li>
      <li><a href="/about">About</a></li>
    </ul>
  </nav>
</div>
