---
const { href, title, added, type, includeDate = true } = Astro.props;

const addedDate = new Date(added);
const day = addedDate.getDate().toString().padStart(2, '0');
---

<style>
  li {
    margin-bottom: 0.5em;
    display: flex;
  }

  .date {
    margin-right: 0.5em;
    font-family: var(--font-mono);
    font-weight: 600;
    font-size: 0.92em;
    line-height: 1.6em;
  }

  .note:nth-of-type(7n + 1) .date {
    color: var(--red);
  }
  .note:nth-of-type(7n + 2) .date {
    color: var(--orange);
  }
  .note:nth-of-type(7n + 3) .date {
    color: var(--pink);
  }
  .note:nth-of-type(7n + 4) .date {
    color: var(--green);
  }
  .note:nth-of-type(7n + 5) .date {
    color: var(--light-blue);
  }
  .note:nth-of-type(7n + 6) .date {
    color: var(--purple);
  }
  .note:nth-of-type(7n + 7) .date {
    color: var(--blue);
  }

  li a {
    text-decoration: none;
    line-height: 1.36;
  }

  li a:hover {
    text-decoration: underline;
  }

  :global(li a.book::before) {
    content: 'ðŸ“˜ ';
    text-decoration: none;
  }
</style>

<li class="note">
  {includeDate && <span class="date">{day}</span>}
  <a class={type} href={href}>{title}</a>
</li>
